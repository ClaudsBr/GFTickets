@model IEnumerable<ClaudEventos.Models.Estoque>
@{
    Layout= "_LayoutAdmin";
}
<h2> Estoque</h2>
<hr/>
<a asp-action="NovoEstoque" asp-controller="Gestao" class="btn btn-success">Criar Estoque</a>
<script>
    $(document).ready( function () {
    $('#estoques').DataTable({
        "info": false, 
        "language" : {
            "lengthMenu": " _MENU_ registros por página",
            "zeRecords": "Desculpe, Nada foi encontrado",
            "info": "Exibindo _PAGE_ de _PAGES_",
            "infoEmpty": "Nenhum registro disponível",
            "search": "Buscar",
            "paginate": {
                "first": "Primeira",
                "last": "Última",
                "next": "Próxima",
                "previous": "Anterior"
            }
        }
    });
} );
</script>

<table class="table table-sm table-bordered" id="estoques">
    <thead class="thead-dark">
        <tr>
            <th> Id </th>
            <th> Evento </th>
            <th> Quantidade</th>
            <th> Editar </th>
                        
        </tr>
    </thead>
    <tbody>
       @foreach (var estoque in Model) {
         <tr>
             <td>@estoque.Id</td>
             <td>@estoque.Evento.Nome</td>
             <td>@estoque.Quantidade</td>
             
             <td><a class="btn btn-warning" href="/Gestao/EditarEstoque/@estoque.Id">Editar</a></td>
             
         </tr>             
       } 
    </tbody>

</table>